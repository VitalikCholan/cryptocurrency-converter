{
  "manifest_version": 3,
  "name": "Real-Time Crypto Converter (Beta)",
  "description": "Convert between cryptocurrencies and fiat currencies using real-time market rates. Simple and fast cryptocurrency calculator.",
  "version": "1.0.0",
  "version_name": "1.0.0 Beta",

  "action": {
    "default_popup": "index.html",
    "default_title": "Real-Time Crypto Converter",
    "default_icon": {
      "48": "assets/icons/icon48.png"
    }
  },
  "host_permissions": ["https://pro-api.coinmarketcap.com/*"],
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "author": "Cholan Vitaliy",
  "homepage_url": "https://github.com/VitalikCholan",
  "short_name": "CryptoConverter"
}
